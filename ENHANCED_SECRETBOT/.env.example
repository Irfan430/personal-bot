# Bot Configuration
BOT_NAME=Enhanced SecretBot
BOT_PREFIX=>
BOT_LANGUAGE=en
NODE_ENV=development

# Facebook Account (Use a secondary account for safety)
FACEBOOK_EMAIL=your_email@example.com
FACEBOOK_PASSWORD=your_password
FACEBOOK_2FA_SECRET=

# Database Configuration
DB_TYPE=mongodb
MONGODB_URI=mongodb://localhost:27017/enhanced_secretbot
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here

# Email Configuration (Gmail)
GMAIL_EMAIL=your_gmail@gmail.com
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# Dashboard Configuration
DASHBOARD_PORT=3000
DASHBOARD_HOST=localhost
DASHBOARD_ENABLE=true

# Admin Configuration
ADMIN_IDS=your_facebook_id,another_admin_id

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Auto Features
AUTO_RESTART=false
AUTO_RESTART_TIME=86400000
AUTO_BACKUP=true
BACKUP_INTERVAL=3600000

# Security Features
WHITELIST_MODE=false
WHITELIST_IDS=
ADMIN_ONLY_MODE=false

# Logging
LOG_LEVEL=info
LOG_FILE=logs/bot.log

# API Keys for various services
WEATHER_API_KEY=your_weather_api_key
YOUTUBE_API_KEY=your_youtube_api_key
SPOTIFY_API_KEY=your_spotify_api_key

# Notification Settings
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
DISCORD_WEBHOOK_URL=your_discord_webhook_url